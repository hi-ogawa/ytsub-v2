{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/tsc",
    "module": "es6",
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "types": [],
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
